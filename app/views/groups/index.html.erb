<h1>Listing groups</h1>

<table class="table table-striped table-bordered">
	<thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Edit', edit_group_path(group), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', group, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Group', new_group_path, :class => "btn btn-info" %>
